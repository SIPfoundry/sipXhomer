<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE model 
    PUBLIC "-//SIPFoundry//sipXconfig//Model specification 2.0//EN" 
    "http://www.sipfoundry.org/sipXconfig/dtd/setting_2_0.dtd">
<model>
  <type id="loglevel">
    <enum>
      <option>
        <value>7</value>
      </option>
      <option>
        <value>6</value>
      </option>
      <option>
        <value>5</value>
      </option>
      <option>
        <value>4</value>
      </option>
      <option>
        <value>3</value>
      </option>
      <option>
        <value>2</value>
      </option>
      <option>
        <value>1</value>
      </option>
      <option>
        <value>0</value>
      </option>
    </enum>
  </type>
  <type id="auth">
    <enum>
      <option>
        <value>sipx</value>
      </option>
      <option>
        <value>internal</value>
      </option>
      <option>
        <value>ldap</value>
      </option>
      <option>
        <value>radius_build</value>
      </option>
    </enum>
  </type>
  <group name="homer_capture">
    <setting name="log-level">
      <type refid="loglevel" />
      <value>5</value>
    </setting>
  </group>
  <group name="homer_web">
    <setting name="auth">
      <type refid="auth">
      </type>
      <value>sipx</value>
    </setting>
    <!--  Add more settings listed in preferences.php -->
  </group>
  <group name="homer_db">
    <setting name="rotate_enable">
      <type>
        <boolean>
          <true><value>1</value></true>
          <false><value>0</value></false>
        </boolean>
      </type>
      <value>1</value>
    </setting>
    <setting name="rotate_hour">
      <type><integer/></type>
      <value>0</value>
    </setting>
  </group>
</model>
